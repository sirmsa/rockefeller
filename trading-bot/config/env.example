# Application
NODE_ENV=development
PORT=3000
APP_NAME=TradingBot

# Binance API Configuration
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
BINANCE_TESTNET=false
BINANCE_RECV_WINDOW=60000
BINANCE_USE_SERVER_TIME=true

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trading_bot
DB_USER=trading_bot_user
DB_PASSWORD=your_db_password_here
DB_SSL=false
DB_CONNECTION_POOL=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Trading Configuration
MAX_POSITIONS_PER_PORTFOLIO=10
DEFAULT_STOP_LOSS_PERCENTAGE=2.0
DEFAULT_TAKE_PROFIT_PERCENTAGE=4.0
MAX_SLIPPAGE_PERCENTAGE=0.5
MIN_TRADE_AMOUNT=10.0
DEFAULT_TIME_IN_FORCE=GTC
ENABLE_ICEBERG_ORDERS=false
MAX_ALGO_ORDERS=5

# AI Configuration
SENTIMENT_POLLING_INTERVAL=600000
CONFIDENCE_THRESHOLD=0.7
SENTIMENT_WEIGHT=0.4
TECHNICAL_WEIGHT=0.6

# Risk Management
MAX_PORTFOLIO_RISK=0.05
MAX_SYMBOL_RISK=0.02
CORRELATION_THRESHOLD=0.8
CIRCUIT_BREAKER_THRESHOLD=0.1
MAX_LEVERAGE=1
MARGIN_TYPE=ISOLATED

# API Rate Limiting
REST_RATE_LIMIT=1200
WEBSOCKET_RATE_LIMIT=5
MAX_WEBSOCKET_CONNECTIONS=100
HEARTBEAT_INTERVAL=30000
RECONNECT_ATTEMPTS=5
RECONNECT_DELAY=1000

# Logging
LOG_LEVEL=info
LOG_MAX_FILE_SIZE=5242880
LOG_MAX_FILES=5
LOG_API_REQUESTS=true
LOG_WEBSOCKET_EVENTS=true

# Security
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h
ENCRYPTION_KEY=your_encryption_key_here

# External APIs (for sentiment analysis)
NEWS_API_KEY=your_news_api_key_here
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here
