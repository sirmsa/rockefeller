@page "/counter"

<MudText Typo="Typo.h3" Class="mb-4">Counter</MudText>

<MudPaper Class="pa-4 mb-4" Elevation="2">
    <MudText Typo="Typo.h5" Class="mb-3">Current count: @currentCount</MudText>
    
    <MudStack Row="true" Spacing="2">
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="IncrementCount" StartIcon="@Icons.Material.Filled.Add">
            Increment
        </MudButton>
        <MudButton Variant="Variant.Outlined" Color="Color.Secondary" OnClick="DecrementCount" StartIcon="@Icons.Material.Filled.Remove">
            Decrement
        </MudButton>
        <MudButton Variant="Variant.Outlined" Color="Color.Error" OnClick="ResetCount" StartIcon="@Icons.Material.Filled.Refresh">
            Reset
        </MudButton>
    </MudStack>
</MudPaper>

<MudAlert Severity="Severity.Info" Class="mb-4">
    <MudText Typo="Typo.body2">
        This page demonstrates MudBlazor components like buttons, text, paper, and alerts.
    </MudText>
</MudAlert>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    private void DecrementCount()
    {
        if (currentCount > 0)
            currentCount--;
    }

    private void ResetCount()
    {
        currentCount = 0;
    }
}
